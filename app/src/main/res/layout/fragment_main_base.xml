<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.MainBaseFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="394dp"
        android:layout_height="518dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_margin="20px"
        android:background="#272727"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="274dp"
            android:layout_height="58dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="124dp"
                android:layout_height="wrap_content"
                android:text="Choose a coin :"
                android:textAlignment="center"
                android:textColor="#FFFFFF" />

            <Spinner
                android:id="@+id/coin_type"
                android:layout_width="88dp"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <ImageView
            android:id="@+id/icon_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/btc" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:text="Enter a BTC address :"
            android:textAlignment="center"
            android:textColor="#FFFFFF" />

        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="277dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/fetch_button"
            android:layout_width="214dp"
            android:layout_height="wrap_content"
            android:layout_margin="20px"
            android:backgroundTint="#EEC643"
            android:backgroundTintMode="add"
            android:text="Fetch the address"
            android:textColor="#171717" />

    </LinearLayout>

</FrameLayout>