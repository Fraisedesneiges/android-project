<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.MainConnectedFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="506dp"
        android:background="#272727"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My addresses :"
            android:textColor="#FFFFFF" />

        <ListView
            android:id="@+id/a_list"
            android:layout_width="match_parent"
            android:layout_height="180dp">

        </ListView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="278dp"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="278dp"
                android:layout_height="42dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Choose a coin :"
                    android:textColor="#FFFFFF" />

                <Spinner
                    android:id="@+id/c_coin_type"
                    android:layout_width="92dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <ImageView
                android:id="@+id/c_icon"
                android:layout_width="331dp"
                android:layout_height="wrap_content"
                android:layout_margin="30px"
                android:src="@drawable/btc" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="284dp"
                android:layout_height="wrap_content"
                android:text="Enter a BTC address :"
                android:textColor="#FFFFFF" />

            <EditText
                android:id="@+id/c_address"
                android:layout_width="278dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/c_fetch"
                android:layout_width="223dp"
                android:layout_height="wrap_content"
                android:text="Fetch address" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>