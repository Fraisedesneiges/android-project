<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222222"
    tools:context=".activities.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="386dp"
            android:layout_height="80dp"
            android:layout_margin="20px"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="177dp"
                android:layout_height="52dp"
                android:layout_margin="20px"
                android:layout_weight="1"
                app:srcCompat="@drawable/coincoinprojectsvg" />

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/button_container"
                android:layout_width="221dp"
                android:layout_height="63dp"
                android:layout_gravity="center"></androidx.fragment.app.FragmentContainerView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="392dp"
            android:layout_height="74dp"
            android:layout_margin="20px"
            android:background="#272727"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="30px">

            <ImageView
                android:id="@+id/course_icon"
                android:layout_width="155dp"
                android:layout_height="39dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/btc" />

            <Spinner
                android:id="@+id/coin_course"
                android:layout_width="239dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/course"
                android:layout_width="221dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView" />

            <Spinner
                android:id="@+id/currency_course"
                android:layout_width="216dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/main_container"
            android:layout_width="match_parent"
            android:layout_height="552dp"></androidx.fragment.app.FragmentContainerView>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>